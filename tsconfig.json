{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ES6",
    "target": "ES2021",
    "sourceMap": true,
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}